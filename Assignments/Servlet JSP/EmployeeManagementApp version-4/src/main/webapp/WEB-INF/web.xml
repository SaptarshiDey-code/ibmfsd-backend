<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  
  <servlet>
  <servlet-name>AddEmployeeServlet</servlet-name>
  <servlet-class>EmployeeMGMTServlet.EmployeeAdd</servlet-class>
  
  </servlet>
  
  <servlet-mapping>
  <servlet-name>AddEmployeeServlet</servlet-name>
  <url-pattern>/added.do</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
  <servlet-name>ShowEmployeeServlet</servlet-name>
  <servlet-class>EmployeeMGMTServlet.EmployeeDisplayAll</servlet-class>
  
  </servlet>
  
  <servlet-mapping>
  <servlet-name>ShowEmployeeServlet</servlet-name>
  <url-pattern>/show.do</url-pattern>
  </servlet-mapping>
  
  
   <servlet>
  <servlet-name>ShowEditEmployeeServlet</servlet-name>
  <servlet-class>EmployeeMGMTServlet.ShowEditForm</servlet-class>
  
  </servlet>
  
  <servlet-mapping>
  <servlet-name>ShowEditEmployeeServlet</servlet-name>
  <url-pattern>/edit.do</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
  <servlet-name>UpdateEmployeeServlet</servlet-name>
  <servlet-class>EmployeeMGMTServlet.EmployeeUpdate</servlet-class>
  
  </servlet>
  
  <servlet-mapping>
  <servlet-name>UpdateEmployeeServlet</servlet-name>
  <url-pattern>/edited.do</url-pattern>
  </servlet-mapping>
  
  <servlet>
  <servlet-name>DeleteEmployeeServlet</servlet-name>
  <servlet-class>EmployeeMGMTServlet.DeleteEmployee</servlet-class>
  
  </servlet>
  
  <servlet-mapping>
  <servlet-name>DeleteEmployeeServlet</servlet-name>
  <url-pattern>/delete.do</url-pattern>
  </servlet-mapping>
  
  <servlet>
  <servlet-name>LogoutServlet</servlet-name>
  <servlet-class>EmployeeMGMTServlet.Logout</servlet-class>
  
  </servlet>
  
  <servlet-mapping>
  <servlet-name>LogoutServlet</servlet-name>
  <url-pattern>/logout.do</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
  <servlet-name>LoginServlet</servlet-name>
  <servlet-class>EmployeeMGMTServlet.Login</servlet-class>
  
  </servlet>
  
  <servlet-mapping>
  <servlet-name>LoginServlet</servlet-name>
  <url-pattern>/login.do</url-pattern>
  </servlet-mapping>
  
</web-app>
